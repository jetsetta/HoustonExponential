 {{> header}} {{message}}

<!-- Register -->
<div class="register">
  <div class="container">
    <div class="row">
      <div class="col-md-8 m-auto">
        <h1 class="display-4 text-center">Register</h1>
        <p class="lead text-center">Register a new Houston Exponential account</p>
        <form action="/users/register" method='POST'>
          <div class="form-group">
            <input type="text" class="form-control form-control-lg" placeholder="First Name" name="firstName" /> {{#if errors.firstName}}
            <div class="alert alert-danger">{{errors.firstName}}</div>
            {{/if}}
          </div>
          <div class="form-group">
            <input type="text" class="form-control form-control-lg" :class="{' is-invalid': errors.lastName}" placeholder="Last Name"
              name="lastName" /> {{#if errors.lastName}}
            <div class="alert alert-danger">{{errors.lastName}}</div>
            {{/if}}
          </div>
          <div class="form-group">
            <input type="text" class="form-control form-control-lg" :class="{' is-invalid': errors.email}" placeholder="Email Address"
              name="email" /> {{#if errors.email}}
            <div class="alert alert-danger">{{errors.email}}</div>
            {{/if}}
          </div>
          <div class="form-group">
            <input type="password" class="form-control form-control-lg" :class="{' is-invalid': errors.password}" placeholder="Password"
              name="password" /> {{#if errors.password}}
            <div class="alert alert-danger">{{errors.password}}</div>
            {{/if}}
          </div>
          <div class="form-group">
            <input type="password" class="form-control form-control-lg" placeholder="Confirm Password" name="password2" />            {{#if
            errors.password2}}
            <div class="alert alert-danger">{{errors.password2}}</div>
            {{/if}}
          </div>
          <input type="submit" class="btn btn-info btn-block mt-4" />
        </form>

        <div class="text-center">
          <a href="/users/linkedin">
            <img src="/logos/Sign-in-Large---Default.png" alt="linkedin">
            </img>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

{{> footer}}
