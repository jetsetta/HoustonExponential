{{> header}}
{{message}}

<div class="container">
  <h1 class="text-center" style="margin-top: 20px">
    Create a Service Profile
  </h1>
</div>

<div class="container mb-4">
  <div class="row">
    <div class="col-md-8 m-auto mt-10">
	    <form action="/services/register" method='POST'>
        <label for="name">Service Name</label>
	        <input type="text" class="form-control" name="name" placeholder="Service Name"/>
        <label for="logo">Logo URL</label>
	        <input type="url" class="form-control" name="logo" placeholder="Link to logo image"/>
        <label for="description">Description</label>
	        <textarea rows="1" class="form-control" placeholder="Quick summary of your business" name="description" /></textarea>
        <label for="type">Type of Service</label>
	        <select name="type" class="form-control" >
            <option value="Accelerator">Accelerator</option>
    				<option value="Corporate Accelerator">Corporate Accelerator</option>
    				<option value="Co-Working Space">Co-Working Space</option>
    				<option value="Entrepreneurship Program">Entrepreneurship Program</option>
	        </select>
        <label for="associatedFund">Associated Fund</label>
    			<input type="text" class="form-control" name="associatedFund" placeholder="If applicable, enter the investor name associated with this service"/>
        <div class="form-check">
        		<input type="checkbox" class="form-check-input" name="academiaSupported">
        		<label class="form-check-label" for="academiaSupported">Academia Supported?</label>
        </div>
        <label for="batchSize">Batch Size</label>
	        <select name="batchSize" class="form-control">
            <option value="1 - 10">1 - 10</option>
    				<option value="11 - 20">11 - 20</option>
    				<option value="21 +">21 +</option>
	        </select>
        <label for="founded">Founded Year</label>
	        <input class="form-control" type="number" maxlength="4" placeholder="e.g. 2014" name="founded"/>
        <label for="location">Location</label>
          <input type="text" class="form-control" name="location" placeholder="Enter a street address or Houston neighborhood"/>
        <label for="website">Company Website</label>
          <input class="form-control" name="website" type="url" placeholder="Link to company site"/>
        <label for="contact">Point of Contact</label>
	        <input class="form-control" name="contact" type="url" placeholder="e.g. John Smith: johnsmith@company.com, (281) 555-5555"/>
        <label for="bio">About Summary</label>
	        <textarea rows="3" class="form-control" name="bio" placeholder="A more in-depth summary of your business's origins, interests, and future plans."></textarea>
        <input type="submit" class="btn btn-info btn-block mt-4"/>
      </form>
    </div>
  </div>
</div>

{{> footer}}
