{{> header}}

<div class="container text-center">
    <h1><a href="{{serviceInfo.website}}">{{serviceInfo.name}}</a></h1>
    <h2 class="text-muted">{{serviceInfo.description}}</h2>
</div>

<div class="container pt-3">
    <div class="col-s-12 col-lg-3">
        <img src="{{serviceInfo.logo}}" class="img-logo img-responsive float-left mr-3" width="300px">
    </div>
    <div class="col-s-12 col-lg-12">
        <p>{{serviceInfo.bio}}</p>
    </div>
</div>

<div class="container pt-3">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">Type</th>
                <th scope="col">Founded</th>
                <th scope="col">Location</th>
                <th scope="col">Contact</th>
                <th scope="col">Batch Size</th>
                <th scope="col">Academia Supported?</th>
                <th scope="col">Associated Fund?</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td scope="col">{{serviceInfo.type}}</td>
                <td scope="col">{{serviceInfo.founded}}</td>
                <td scope="col">{{serviceInfo.location}}</td>
                <td scope="col">{{serviceInfo.contact}}</td>
                <td scope="col">{{serviceInfo.batchSize}}</td>
                <td scope="col">{{serviceInfo.academiaSupported}}</td>
                <td scope="col">{{serviceInfo.associatedFund}}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="text-center pt-3 pb-3">
    <a href="/services"><button class="btn btn-blue">Back to Services</button></a>
</div>

{{> footer}}