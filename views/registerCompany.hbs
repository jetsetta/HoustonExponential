{{> header}}
{{message}}

<div class="container">
  <h1 class="text-center" style="margin-top: 20px">
    Create a Company Profile
  </h1>
</div>

<div class="container mb-4">
  <div class="row">
    <div class="col-md-8 m-auto mt-10">
	    <form action="/companies/register" method='POST'>
        <label for="name">Startup Name</label>
	        <input type="text" class="form-control" name="name" placeholder="Company Name"/>
        <label for="logo">Logo URL</label>
	        <input type="url" class="form-control" name="logo" placeholder="Link to logo image"/>
        <label for="description">Description</label>
	        <textarea rows="1" class="form-control" placeholder="Quick summary of your business" name="description" /></textarea>
        <label for="category">Type of Startup</label>
	        <select name="category" class="form-control" >
	          <option value="Agricultural and Food Technology">
              Agricultural and Food Technology
            </option>
	          <option value="Clean Technology">
              Clean Technology
            </option>
	          <option value="Consumer Electronics">
              Consumer Electronics
            </option>
            <option value="Digital Health and Medical Technologies">
              Digital Health and Medical Technologies
            </option>
	          <option value="Education and Knowledge Technologies">
              Education and Knowledge Technologies
            </option>
            <option value="Enterprise Solutions">
              Enterprise Solutions
            </option>
	          <option value="Finance Technology and E-Commerce">
              Finance Technology and E-Commerce
            </option>
            <option value="Industrial Technologies">
              Industrial Technologies
            </option>
            <option value="Mobile and Telecom Technologies">
              Mobile and Telecom Technologies
            </option>
	          <option value="Pharmaceuticals">
              Pharmaceuticals
            </option>
	          <option value="Security and Safety Technologies">
              Security and Safety Technologies
            </option>
            <option value="Social Media and Advertising">
              Social Media and Advertising
            </option>
        		<option value="Software Applications">
              Software Applications
            </option>
        		<option value="Other">
              Other: See Description
            </option>
	        </select>
        <label for="location">Location</label>
	        <input type="text" class="form-control" name="location" placeholder="Enter a street address or Houston neighborhood"/>
        <label for="employees">Number of Employees</label>
	        <select name="employees" class="form-control">
        		<option value="1 - 10">1 - 10</option>
        		<option value="11 - 50">11 - 50</option>
        		<option value="51 - 200">51 - 200</option>
        		<option value="201 - 500">201 - 500</option>
        		<option value="500+">500+</option>
	        </select>
        <label for="fundingstage">Funding Stage</label>
	        <select class="form-control" name="fundingstage">
        		<option value="Bootstrapped">Bootstrapped</option>
        		<option value="Pre-seed">Pre-seed</option>
        		<option value="Seed">Seed</option>
        		<option value="A">A</option>
        		<option value="B">B</option>
        		<option value="C+">C+</option>
        		<option value="Public">Public</option>
        		<option value="Revenue Financed">Revenue Financed</option>
        		<option value="Established">Established</option>
	        </select>
        <label for="foundedDate">Founded Year</label>
	        <input class="form-control" type="number" maxlength="4" placeholder="e.g. 2014" name="foundedDate"/>
        <label for="productStage">Product Stage</label>
        	<select name="productStage"class="form-control" >
        		<option value="Customer development">Customer development</option>
        		<option value="R&D">R&D</option>
        		<option value="Clinical Trial">Clinical Trial</option>
        		<option value="Alpha">Alpha</option>
        		<option value="Beta">Beta</option>
        		<option value="Released">Released</option>
        	</select>
        <label for="businessModel">Business Model</label>
        	<select name="businessModel" class="form-control" >
        		<option value="B2B">B2B</option>
        		<option value="B2C">B2C</option>
        		<option value="B2B2C">B2B2C</option>
        		<option value="B2G">B2G</option>
        	</select>
        <label for="websiteUrl">Company Website</label>
	        <input class="form-control" name="websiteUrl" type="url" placeholder="Link to company site"/>
        <label for="contact">Point of Contact</label>
	        <input class="form-control" name="contact" placeholder="e.g. John Smith: johnsmith@company.com, (281) 555-5555"/>
        <label for="bio">About Summary</label>
	        <textarea rows="3" class="form-control" name="bio" placeholder="A more in-depth summary of your business's origins, interests, and future plans."></textarea>
        <input type="submit" class="btn btn-info btn-block mt-4"/>
      </form>
    </div>
  </div>
</div>

{{> footer}}
