{{> header}}
<!-- Login -->
<div class="login">
  <div class="container">
    <div class="row">
      <div class="col-md-8 m-auto">
        <h1 class="display-4 text-center">Log In</h1>
        <p class="lead text-center">Log into your Houston Exponential account </p>
        <form action="/users/login" method='POST'>
          <div class="form-group">
            <input type="email" class="form-control form-control-lg" placeholder="Email Address" name="email" />
              {{#if errors.email}}
              <div class="alert alert-danger">{{errors.email}}</div>
              {{/if}}
          </div>

          <div class="form-group">
            <input type="password" class="form-control form-control-lg" placeholder="Password" name="password" />
              {{#if errors.password}}
              <div class="alert alert-danger">{{errors.password}}</div>
              {{/if}}
          </div>

          <input type="submit" class="btn btn-info btn-block mt-4" />
        </form>
        <div class="text-center">
          <a href="/users/linkedin">
            <img src="/logos/Sign-in-Large---Default.png" alt="linkedin"></img>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

{{> smallContentFooter}}
