 {{#each serviceList}}
<div class="card company-cards">
    <div class="company-cards-img"><img class="card-img-top" src="{{logo}}" alt="{{name}} logo"></div>
    <div class="card-body company-cards-text">
        <h5 class="card-title">{{name}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{description}}</h6>
        <div class="text-center">
            <form action="/services/serviceprofile" method="POST">
                <input name="service_id" hidden value="{{id}}" />
                <button class="btn btn-blue mx-auto">More Info</button>
            </form>
        </div>
    </div>
    <div class="card-footer">
        <small class="text-muted">

            <div class="float-left">
                Founded {{founded}}
            </div>
            <div class="float-right">
                {{type}}
            </div>

        </small>
    </div>
</div>
{{/each}}